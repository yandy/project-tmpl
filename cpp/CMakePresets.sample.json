{
  "version": 3,
  "configurePresets": [
    {
      "name": "vcpkg",
      "generator": "Ninja",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
    },
    {
      "name": "develop-windows",
      "inherits": "vcpkg",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": {
          "type": "string",
          "value": "Debug"
        }
      },
      "binaryDir": "${sourceDir}/build/windows"
    },
    {
      "name": "develop-wsl",
      "inherits": "vcpkg",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": {
          "type": "string",
          "value": "Debug"
        }
      },
      "binaryDir": "${sourceDir}/build/wsl"
    },
    {
      "name": "develop-docker",
      "inherits": "vcpkg",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": {
          "type": "string",
          "value": "Debug"
        }
      },
      "binaryDir": "${sourceDir}/build/docker"
    },
    {
      "name": "deploy-docker",
      "inherits": "vcpkg",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": {
          "type": "string",
          "value": "Release"
        }
      },
      "binaryDir": "${sourceDir}/build",
      "installDir": "/opt/project"
    }
  ],
  "buildPresets": [
    {
      "name": "deploy-docker",
      "configurePreset": "deploy-docker",
      "targets":["install"]
    }
  ]
}
